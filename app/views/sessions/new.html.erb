<div class="sign-form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<div class="sign-box">
	<%= form_tag do %>
	<fieldset>
		<legend>登录</legend>
		<div>
			<%= label_tag :username, '用户名' %><br>
			<%= text_field_tag :username, params[:username] %>
		</div>
		<div>
			<%= label_tag :password, '密码' %><br>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<%= submit_tag "登录" %>
		</div>
	</fieldset>
	<% end %>
	</div>
</div>