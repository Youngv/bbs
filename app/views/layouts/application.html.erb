<!DOCTYPE html>
<html>
<head>
	<title>郁金香BBS</title>
	<%= stylesheet_link_tag    "application", "editor" %>
	<%= javascript_include_tag "application" %>	
	<%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
	<div id="top-nav">
		<div class="menu">
			<ol>
				<%= nav_link '主页', '/posts', {:class => 'link'}, {:wrapper => 'li', :selected_class => 'active'} %>
				<%= nav_link '会员', '/users', {:class => 'link'}, {:wrapper => 'li', :selected_class => 'active'} %>
			</ol>	
		</div>
		<div class="userinfo">
			<% if session[:user_id] %>
			    <li><a href="/users/<%= @current_user.id %>"><%= @current_user.username %></a></li>
			    <li><%= link_to '注销', signout_path, method: :delete %></li>
			<% else %>
				<%= nav_link '登录', '/signin', {:class => 'link'}, {:wrapper => 'li', :selected_class => 'active'} %>
				<%= nav_link '注册', '/users/new', {:class => 'link'}, {:wrapper => 'li', :selected_class => 'active'} %>
			<% end -%>
		</div>
	</div>
	<div id="container">
		<div id="left-nav">
			<%= render "common/board_list" %>
		</div>
		<div id="main">
			<%= yield %>		
		</div>
	</div>
	<footer>
		<div class="foot-bar">
			<p>@郁金香BBS 2012-2015 Powered by Young</p>
		</div>
	</footer>
</body>
</html>
