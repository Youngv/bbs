<p id="notice"><%= notice %></p>

<div id="post-list"><div class="box">
  <div class="sorts"><%= @board.mainboard.name %>/<%= @board.name %>     最新文章    <%= link_to '发布新文章', new_post_path %></div>
<% @board.posts.each do |post| %>
    <div class="post-line">
      <div class="title">
      <%= link_to post.title, post %>
      </div>
      <div class="info">
        由<a href="/users/<%= post.user_id %>"><%= User.find(post.user_id).username %></a>发布于<%= post.created_at %> |
        <% if signin? && @current_user.id == post.user_id %>
          <%= link_to '编辑', edit_post_path(post) %> |
          <%= link_to '删除', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end -%>
      </div>   
    </div>
<% end %>
<%= will_paginate @board_posts, :inner_window => 2 %>
</div></div>

<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
